@model WebHS.Domain.Entities.Usuario
@{ Layout = ""; }
<link href="~/material-kit-master/assets/css/material-kit.css" rel="stylesheet" />
<script src="https://kit.fontawesome.com/38a775c634.js" crossorigin="anonymous"></script>

@{
    ViewData["Title"] = "Login";
}
<div class="col-md-12 col-sm-12 col-lg-12" style="padding-top:200px">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-6 mx-auto">
                <div class="card card-login">
                    <form class="form" asp-action="Autenticar">
                        <div class="card-header card-header-danger text-center">
                            <h2 class="card-title">SpeedFit</h2>
                        </div>
                        <div class="card-body">
                            <span class="bmd-form-group is-filled">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="fa fa-envelope" aria-hidden="true"></i>
                                        </span>
                                    </div>
                                    <input asp-for="Email" type="email" class="form-control" placeholder="Email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </span>
                            <span class="bmd-form-group is-filled">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="fas fa-key"></i>
                                        </span>
                                    </div>
                                    <input asp-for="Senha" type="password" class="form-control" placeholder="Senha" autocomplete="" />
                                    <span asp-validation-for="Senha" typeof="password" class="text-danger"></span>
                                </div>
                            </span>
                        </div>
                        <br /><br />
                        <div asp-validation-summary="ModelOnly" class="text-danger text-center"></div>
                        <br /><br /><br />
                        <div class="text-center">
                            <input type="submit" value="Logar" class="btn btn-danger btn-round" />
                        </div>
                        <div class="text-center">
                            <a class="btn btn-danger btn-link btn-wd btn-lg" asp-area="" asp-controller="Login" asp-action="Register">Registrar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>